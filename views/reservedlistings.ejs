<%- include('./partials/header') %>

<div class="reserved-listings-container">
  <% reservations.forEach((reservation) => { %>
    <div class="reserved-listing">
      <h2 class="reservation-address"><%= reservation.listing.address %></h2>
      <div class="pictures-container">
        <% reservation.listing.pictures.slice(0, 3).forEach((picture, index) => { %>
          <img src="<%= picture %>" alt="Listing Picture">
        <% }) %>
      </div>
      <ul>
        <li>First Name: <%= reservation.firstName %></li>
        <li>Last Name: <%= reservation.lastName %></li>
        <li>Start Date: <%= reservation.startDate %></li>
        <li>End Date: <%= reservation.endDate %></li>
      </ul>

      <div class="reservation-actions">
        <a href="/reservedlistings/<%= reservation._id %>/update">Update</a>
        <a href="/reservedlistings/<%= reservation._id %>/delete">Delete</a>
      </div>

      <hr class="reservation-separator">
    </div>


  <% }) %>
</div>

<%- include('./partials/footer') %>