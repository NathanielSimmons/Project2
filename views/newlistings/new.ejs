<%- include('../partials/header') %>


<form id="addListingForm" action="/newlistings" method="POST">
  <label for="pictures">Pictures (comma-separated URLs):</label>
  <input type="text" id="pictures" name="pictures" required>

  <label for="bedrooms">Bedrooms (1-10):</label>
  <input type="number" id="bedrooms" name="bedrooms" min="1" max="10" required>

  <label for="bathrooms">Bathrooms (1-10):</label>
  <input type="number" id="bathrooms" name="bathrooms" required>

  <label for="sqFootage">Square Footage (500-10000):</label>
  <input type="number" id="sqFootage" name="sqFootage" min="500" max="10000" required>

  <label for="pricePerNight">Price per Night ($200-$3000):</label>
  <input type="number" id="pricePerNight" name="pricePerNight" min="200" max="3000" required>

  <label for="address">Address:</label>
  <input type="text" id="address" name="address" required>

  <button type="submit">Add Listing</button>
</form>

<% if (saved || typeof saved === 'undefined') { %>
  <p><%= message %></p>
<% } %>

<%- include('../partials/footer') %>
