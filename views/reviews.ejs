
<div class="review-container">
  <form action="/listings/<%= listing._id %>/review" method="POST" class="review-form">
    
    <div class="review-details">
      <h2><%= listing.address %></h2>
      
      <div class="review-pictures">
        <% listing.pictures.forEach(picture => { %>
          <img src="<%= picture %>" alt="Listing Picture">
        <% }) %>
      </div>
      <ul>
        
        <li>Bedrooms: <%= listing.bedrooms %></li>
        <li>Bathrooms: <%= listing.bathrooms %></li>
        
      </ul>
    </div>

    
    <label for="review">Your Review:</label>
    <textarea id="review" name="review" rows="4" cols="50" required></textarea>

    
    <label for="rating">Rating:</label>
    <input type="number" id="rating" name="rating" min="1" max="5" required>

    <button type="submit">Submit Review</button>
  </form>
</div>